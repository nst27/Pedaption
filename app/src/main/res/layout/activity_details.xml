<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Details"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/displayImg"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="175dp"
        tools:srcCompat="@tools:sample/avatars" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:background="@drawable/layout_bg"
        >

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Pet Information"
    android:textSize="30sp"
    android:textStyle="bold"
    android:textColor="#000"
    android:padding="20dp">

</TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_icons8_dog_paw_24"></ImageView>

            <TextView
                android:id="@+id/displayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Name"
                android:textColor="#000"
                android:textSize="20sp">

            </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@drawable/ic_icons8_dog_paw_24"></ImageView>
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Type"
                android:paddingLeft="5dp"
                android:textSize="20sp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_cake_24"
                ></ImageView>

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:paddingLeft="5dp"
            android:textColor="#000"
            android:textSize="20sp"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_icons8_gender_50"
                android:layout_marginLeft="50dp"
                ></ImageView>

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="#000"
                android:paddingLeft="5dp"
                android:textSize="20sp"></TextView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pet Description"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:paddingTop="10dp"
            android:paddingLeft="20dp">

        </TextView>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp">
        <TextView
            android:id="@+id/displayDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:paddingLeft="5dp"
            android:textColor="#000"
            android:textSize="20sp"></TextView>
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pet Address"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            >

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            >
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:paddingLeft="5dp"
                android:textColor="#000"
                android:textSize="20sp"></TextView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posting user"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:paddingLeft="20dp"
            android:paddingTop="10dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp">
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:paddingLeft="5dp"
                android:textColor="#000"
                android:textSize="20sp"></TextView>
            <TextView
                android:id="@+id/userphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:paddingLeft="5dp"
                android:textColor="#000"
                android:textSize="20sp"></TextView>
        </LinearLayout>


    <Button
        android:id="@+id/btn"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="View Map"></Button>
    </LinearLayout>
</LinearLayout>
</ScrollView>